{
  "manifest_version": 3,
  "name": "Products Registry",
  "version": "1.1",
  "description": "Automatically scrape product data from online store homepages.",
  "permissions": [
    "activeTab",
    "scripting",
    "tabs",
    "webNavigation",
    "storage"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "host_permissions": [
    "*://*/*"
  ],
  "action": {
    
  },
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}